<div class="navbar-loboz">
  <!-- Logo -->
  <div class="navbar-loboz-left">
    <%= link_to root_path, class: "navbar-loboz-brand" do %>
      <%= image_tag "logo.png", class: "navbar-loboz-brand-img" %>
    <% end %>
  </div>

  <!-- Search form -->
  <div class="search-bar-wrapper hidden-xs hidden-sm">
    <form class="navbar-loboz-search" action="">
      <i class="fa fa-search navbar-loboz-search-icon"></i>
      <input type="text" name="search" id="nav-search" class="navbar-loboz-search-input" placeholder="Search something">
    </form>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-loboz-right">

    <!-- Different navigation if login or not -->

      <% if user_signed_in? %>
        <!-- Navbar Text Links -->
        <%= link_to "Menu Link 1", "#", {class: "navbar-loboz-item navbar-loboz-link"} %>
        <%= link_to "Menu Link 2", "#", {class: "navbar-loboz-item navbar-loboz-link"} %>

        <!-- Profile picture and dropdown -->
        <div class="navbar-loboz-item">
          <div class="dropdown">
            <%= image_tag avatar_url(current_user), class: "avatar-bordered avatar-small dropdown-toggle", id:"navbar-loboz-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-loboz-dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path do %>
                  <%= t(".profile", default: "Edit Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
              <hr>
              <li>
                <a href="#">Link 1</a>
              </li>
              <li>
                <a href="#">Link 2</a>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, {class: "navbar-loboz-item navbar-loboz-link"} %>
        <%= link_to "Log In", new_user_session_path, {class: "navbar-loboz-item navbar-loboz-link"} %>
      <% end %>

  </div>
</div>
